package test16

interface IEvents {
	event input:nat
	event output:nat
}

stm stm0 {
	uses IEvents
	initial i0
	final F
	var t : nat
	
	state s0 {
		initial I 
		state S1 {
			exit t = t + 1
		}
		state S2 {
			exit t = t + 1
		}
		transition T0 { from I to S1 }
		transition T1 { from S1 to S2 }
	}
		
	transition t0 {
		from i0
		to s0
	}

	transition t1 {
		from s0
		to F
		trigger input?t
		action output!t
	}
}

